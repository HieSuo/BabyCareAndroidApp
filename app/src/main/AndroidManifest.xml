<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/app_logo"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/app_logo_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BabyCareApp"
        tools:targetApi="31">
        <activity
            android:name=".ui.view.controlview.MusicActivity"
            android:exported="false" />
        <activity
            android:name=".ui.view.settingview.ProfileActivity"
            android:exported="false" />
        <activity
            android:name=".ui.view.controlview.FanActivity"
            android:exported="false" />
        <activity
            android:name=".ui.view.controlview.SwingActivity"
            android:exported="false" />
        <activity
            android:name=".ui.view.controlview.EnviromentActivity"
            android:exported="false" />
        <activity
            android:name=".ui.view.controlview.TemperatureActivity"
            android:exported="false"
            android:label="@string/title_activity_temperature"
            android:theme="@style/Theme.BabyCareApp" />
        <activity
            android:name=".ui.view.LightControlActivity"
            android:exported="false" />
        <activity
            android:name=".ui.view.AddDeviceActivity"
            android:exported="false" />
        <activity
            android:name=".ui.view.CameraActivity"
            android:exported="false" />
        <activity
            android:name=".ui.view.ResetPasswordActivity"
            android:exported="false" />
        <activity
            android:name=".ui.view.HomeActivity"
            android:exported="false" />
        <activity
            android:name=".ui.view.RegisterActivity"
            android:exported="false" />
        <activity
            android:name=".ui.view.LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.view.MainActivity"
            android:exported="false" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>